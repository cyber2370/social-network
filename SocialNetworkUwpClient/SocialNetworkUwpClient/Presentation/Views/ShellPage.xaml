<Page
    x:Class="SocialNetworkUwpClient.Presentation.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SocialNetworkUwpClient.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Shell, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0">
            <CommandBar.Content>
                <AppBarButton
                    x:Name="PaneOpen"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    Command="{Binding PaneOpenCloseCommand}"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="22"
                    Icon="More" />
            </CommandBar.Content>
        </CommandBar>

        <SplitView
            Name="ShellSplitView"
            Grid.Row="1"
            IsPaneOpen="{Binding IsPaneOpen, Mode=TwoWay}"
            OpenPaneLength="300">
            <SplitView.Pane>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ListBox
                            x:Name="MenuItemsListBox"
                            ItemsSource="{Binding LeftMenuItems, Mode=OneWay}"
                            SelectedItem="{Binding SelectedLeftMenuItem, Mode=TwoWay}"
                            SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <RelativePanel>
                                        <TextBlock
                                            x:Name="MenuItemLogo"
                                            Margin="5,6,30,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="20"
                                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                                            RelativePanel.AlignLeftWithPanel="True"
                                            Text="{Binding TextLogo}" />
                                        <TextBlock
                                            x:Name="MenuItemText"
                                            Padding="5"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                                            RelativePanel.RightOf="MenuItemLogo"
                                            Text="{Binding Text}" />
                                    </RelativePanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Frame
                        Name="ContentFrame"
                        Grid.Row="1"
                        SourcePageType="{Binding CurrentPageType, Mode=TwoWay}" />
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
